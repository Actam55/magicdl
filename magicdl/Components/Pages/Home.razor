            foreach(JsonElement cardElement in root.GetProperty("data").EnumerateArray())
            {
                if (cardElement.TryGetProperty("prints_search_uri", out JsonElement printsSearchUriElement))
                {
                    string printsSearchUri = printsSearchUriElement.GetString();
                    if (!string.IsNullOrEmpty(printsSearchUri))
                    {
                        listOfPrints += $"<a href='{printsSearchUri}' target='_blank'>Prints</a> ";
                    }
                }
            }
        }
    }


