                //     if (!string.IsNullOrEmpty(printsSearchUri))
                //     {
                //         HttpResponseMessage printsResponse = await client.GetAsync(printsSearchUri);
                //         string printsJson = await printsResponse.Content.ReadAsStringAsync();

                //         using (JsonDocument printsDoc = JsonDocument.Parse(printsJson))
                //         {
                //             JsonElement printsRoot = printsDoc.RootElement;
                //             var releaseDates = new List<DateOnly>();

                //             foreach (JsonElement printing in printsRoot.GetProperty("data").EnumerateArray())
                //             {
                //                 if (printing.TryGetProperty("released_at", out JsonElement releasedAt))
                //                 {
                //                     string dateStr = releasedAt.GetString();
                //                     if (DateOnly.TryParse(dateStr, out DateOnly printDate))
                //                     {
                //                         releaseDates.Add(printDate);
                //                     }
                //                 }
                //             }

                //             if (releaseDates.Any())
                //             {
                //                 card.ReleaseDate = releaseDates.Min(); // Earliest printing
                //             }
                //         }
                //     }
                // }

                card.Oracle_Text = cardElement.GetProperty("oracle_text").GetString();
                cardList.Add(card);
            }
        }
        cardsFound = cardList.Count();
        int randomIndex = rnd.Next(0, cardList.Count);
        correctCard = cardList[randomIndex];

        using (JsonDocument document = JsonDocument.Parse(json))
        {
